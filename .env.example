# Environment Variables
# Copy this file to .env and fill in your values
# Or use: npx hardhat vars set VARIABLE_NAME

# Mnemonic phrase for account generation (12 words)
MNEMONIC="test test test test test test test test test test test junk"

# Infura API key for network access
INFURA_API_KEY=your_infura_api_key

# Private key of your deployment wallet (optional, alternative to mnemonic)
PRIVATE_KEY=

# Sepolia RPC URL (fallback if INFURA_API_KEY not set)
SEPOLIA_URL=https://ethereum-sepolia-rpc.publicnode.com

# Etherscan API key for contract verification
ETHERSCAN_API_KEY=

# Gas reporter settings
REPORT_GAS=false